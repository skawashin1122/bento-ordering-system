{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI App",
            "type": "python",
            "request": "launch",
            "program": "/usr/local/bin/uvicorn",
            "args": [
                "app.main:app",
                "--host",
                "0.0.0.0",
                "--port",
                "8000",
                "--reload"
            ],
            "console": "integratedTerminal",
            "cwd": "/workspace",
            "env": {
                "PYTHONPATH": "/workspace:/workspace/app"
            }
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "/workspace",
            "env": {
                "PYTHONPATH": "/workspace:/workspace/app"
            }
        },
        {
            "name": "Pytest: Current File",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${file}",
                "-v"
            ],
            "console": "integratedTerminal",
            "cwd": "/workspace",
            "env": {
                "PYTHONPATH": "/workspace:/workspace/app"
            }
        }
    ]
}