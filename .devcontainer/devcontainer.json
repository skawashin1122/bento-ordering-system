{
  "name": "Python 3 & Docker",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "web",
  "workspaceFolder": "/app",
  "shutdownAction": "stopCompose",
  
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },

  "forwardPorts": [8000, 5432, 8080],
  "portsAttributes": {
    "8000": {
      "label": "FastAPI Web App",
      "onAutoForward": "openBrowser"
    },
    "5432": {
      "label": "PostgreSQL Database"
    },
    "8080": {
      "label": "pgAdmin"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.pylint",
        "ms-python.black-formatter",
        "charliermarsh.ruff",
        "ms-python.mypy-type-checker",
        "ms-vscode.vscode-json",
        "ms-azuretools.vscode-docker",
        "bradlc.vscode-tailwindcss",
        "esbenp.prettier-vscode",
        "ms-vscode.live-server",
        "redhat.vscode-yaml",
        "mikestead.dotenv"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.terminal.activateEnvironment": false,
        "python.formatting.provider": "black",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": false,
        "python.linting.ruffEnabled": true,
        "python.analysis.typeCheckingMode": "basic",
        "files.exclude": {
          "**/__pycache__": true,
          "**/.pytest_cache": true,
          "**/node_modules": true
        }
      }
    }
  },

  "postCreateCommand": "echo 'Container created! Ready for development'",
  "postStartCommand": "echo 'Container started! Services should be running on: Web:8000, DB:5432, pgAdmin:8080'"
}